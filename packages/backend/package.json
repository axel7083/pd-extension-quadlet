{
  "name": "quadlet",
  "displayName": "Pdoman Quadlet",
  "description": "Manage, generate Podman Quadlet",
  "version": "0.2.0-next",
  "icon": "icon.png",
  "publisher": "axel7083",
  "type": "module",
  "license": "Apache-2.0",
  "engines": {
    "podman-desktop": ">=1.10.0"
  },
  "main": "./dist/extension.cjs",
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "lint:check": "eslint . --ext js,ts,tsx",
    "lint:fix": "eslint . --fix --ext js,ts,tsx",
    "watch": "vite --mode development build -w"
  },
  "contributes": {
    "icons": {
      "quadlet-icon": {
        "description": "Quadlet icon",
        "default": {
          "fontPath": "quadlet-icon.woff2",
          "fontCharacter": "\\EA02"
        }
      }
    },
    "views": {
      "icons/containersList": [
        {
          "when": "PODMAN_SYSTEMD_UNIT in containerLabelKeys",
          "icon": "${quadlet-icon}"
        }
      ]
    },
    "menus": {
      "dashboard/container": [{
        "command": "podlet.generate.container",
        "title": "Generate Quadlet"
      }]
    },
    "commands": [{
      "command": "podlet.generate.container",
      "title": "Podlet: generate"
    }]
  },
  "devDependencies": {
    "@podman-desktop/api": "^1.14.2",
    "@podman-desktop/podman-extension-api": "next",
    "@types/ini": "^4.1.1",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^2.1.6",
    "eslint": "^8.56.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-redundant-undefined": "^1.0.0",
    "eslint-plugin-sonarjs": "^1.0.4",
    "prettier": "^3.4.2",
    "typescript": "5.7.2",
    "vite": "^6.0.1",
    "vitest": "^2.1.6",
    "@types/tar-fs": "^2.0.4",
    "@types/unzipper": "^0.10.10",
    "xz-decompress": "^0.2.2"
  },
  "dependencies": {
    "ini": "^5.0.0",
    "semver": "^7.6.3",
    "@octokit/rest": "^21.0.2",
    "tar-fs": "^3.0.6",
    "unzipper": "^0.11.6"
  }
}
